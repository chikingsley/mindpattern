{
  "openapi": "3.0.0",
  "info": {
    "title": "Mindpattern API",
    "version": "1.0.0",
    "description": "API documentation for Mindpattern"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/hume/configs": {
      "get": {
        "summary": "List configs",
        "parameters": [
          {
            "name": "pageSize",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "pageNumber",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "name",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of configs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "configs": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "name": { "type": "string" },
                          "description": { "type": "string" },
                          "created_at": { "type": "string", "format": "date-time" }
                        }
                      }
                    },
                    "total": { "type": "integer" },
                    "pageSize": { "type": "integer" },
                    "pageNumber": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create new config",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "settings": { "type": "object" }
                },
                "required": ["name", "settings"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Config created successfully"
          }
        }
      }
    },
    "/api/hume/configs/{configId}/versions": {
      "get": {
        "summary": "List config versions",
        "parameters": [
          {
            "name": "configId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "pageNumber",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of config versions"
          }
        }
      },
      "post": {
        "summary": "Create new config version",
        "parameters": [
          {
            "name": "configId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "settings": { "type": "object" }
                },
                "required": ["settings"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Config version created successfully"
          }
        }
      }
    },
    "/api/hume/configs/active": {
      "get": {
        "summary": "Get active config",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "projectId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": "default"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Active config retrieved successfully"
          }
        }
      },
      "post": {
        "summary": "Set active config",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": { "type": "string" },
                  "configId": { "type": "string" },
                  "version": { "type": "number" },
                  "projectId": {
                    "type": "string",
                    "default": "default"
                  }
                },
                "required": ["userId", "configId", "version"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Active config set successfully"
          }
        }
      }
    },
    "/api/hume/tools": {
      "get": {
        "summary": "List tools",
        "parameters": [
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "pageNumber",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "name",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "type",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["builtin", "function"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of tools"
          }
        }
      },
      "post": {
        "summary": "Create new tool",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "type": {
                    "type": "string",
                    "enum": ["builtin", "function"]
                  },
                  "implementation": { "type": "string" }
                },
                "required": ["name", "type", "implementation"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tool created successfully"
          }
        }
      }
    },
    "/api/hume/tools/{toolId}/versions": {
      "get": {
        "summary": "List tool versions",
        "parameters": [
          {
            "name": "toolId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of tool versions"
          }
        }
      }
    },
    "/api/hume/voices": {
      "get": {
        "summary": "List voices",
        "parameters": [
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "pageNumber",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of voices"
          }
        }
      },
      "post": {
        "summary": "Create new voice",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "settings": { "type": "object" }
                },
                "required": ["name", "settings"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Voice created successfully"
          }
        }
      }
    },
    "/api/hume/voices/{voiceId}/versions": {
      "get": {
        "summary": "List voice versions",
        "parameters": [
          {
            "name": "voiceId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of voice versions"
          }
        }
      }
    },
    "/api/hume/prompts": {
      "get": {
        "summary": "List prompts",
        "parameters": [
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "pageNumber",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of prompts"
          }
        }
      },
      "post": {
        "summary": "Create new prompt",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "template": { "type": "string" }
                },
                "required": ["name", "template"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Prompt created successfully"
          }
        }
      }
    },
    "/api/hume/prompts/{promptId}/versions": {
      "get": {
        "summary": "List prompt versions",
        "parameters": [
          {
            "name": "promptId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of prompt versions"
          }
        }
      }
    },
    "/api/hume/prompts/active": {
      "get": {
        "summary": "Get active prompt",
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "projectId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "default": "default"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Active prompt retrieved successfully"
          }
        }
      },
      "post": {
        "summary": "Set active prompt",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": { "type": "string" },
                  "promptId": { "type": "string" },
                  "version": { "type": "number" },
                  "projectId": {
                    "type": "string",
                    "default": "default"
                  }
                },
                "required": ["userId", "promptId", "version"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Active prompt set successfully"
          }
        }
      }
    }
  }
}
